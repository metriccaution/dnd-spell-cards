    "@types/styled-components": "^4.4.1",
    "@types/yup": "^0.26.27",
    "immer": "^3.3.0",
    "lodash": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-spring": "^8.0.27",
